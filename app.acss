}

.midnight-blue {
  color: #191970;
}

.cerulean-blue {
  color: #2A52BE;
}

.deep-blue {
  color: #0000CD;
}

.claro-blue {
  color: var(--claro-blue);
}

/* Fonts */

.font-w-200 {
  font-weight: 200;
}

.font-w-300 {
  font-weight: 300;
}

.font-w-400 {
  font-weight: 400;
}

.font-w-500 {
  font-weight: 500;
}

.font-w-600 {
  font-weight: 600;
}

.font-w-700 {
  font-weight: 700;
}

.font-w-800 {
  font-weight: 800;
}

.font-w-900 {
  font-weight: 900;
}

.h1-style {
  font-size: 40rpx;
}

.h2-style {
  font-size: 36rpx;
}

.h3-style {
  font-size: 32rpx;
}

.h4-style {
