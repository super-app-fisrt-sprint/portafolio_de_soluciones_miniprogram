* {
  box-sizing: border-box;
}

page {
  background: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

:root {
  --claro-color: #E52A1B;
  --claro-red: #E03224;
  --claro-gray: #404040;
  --claro-gray-clarity: #B3B3B3;
  --claro-blue: #187385;
}

/* Colors */

.pure-red {
  color: #FF0000;
}

.orange-red {
  color: #FF4500;
}

.coral-red {
  color: #FF6347;
}

.salmon-red {
  color: #FF7F50;
}

.crimson-red {
  color: #DC143C;
}

.fire-red {
  color: #B22222;
}

.dark-red {
  color: #8B0000;
}

.light-red {
  color: #FFA07A;
}

.violet-red {
  color: #FF1493;
}

.pink-red {
  color: #FFC0CB;
}

.claro-red {
  color: var(--claro-red);
}

.gray-10 {
  color: #0a0a0a;
}

.gray-20 {
  color: #1a1a1a;
}

.gray-30 {
  color: #2a2a2a;
}

.gray-40 {
  color: #3a3a3a;
}

.claro-gray {
  color: var(--claro-gray);
}

.claro-gray-clarity {
  color: var(--claro-gray-clarity);
}

.sky-blue {
  color: #87CEEB;
}

.light-blue {
  color: #ADD8E6;
}

.powder-blue {
  color: #B0E0E6;
}

.steel-blue {
  color: #4682B4;
}

.navy-blue {
  color: #000080;
}

.dark-blue {
  color: #00008B;
}

