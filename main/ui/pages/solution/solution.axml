                  </view>

                </block>

              </block>
            </view>

          </swiper-item>
        </swiper>

      </tabs>
    </view>

  </view>

  <view class="footer">
    <button class="font-w-600" onTap="handleShowPopup">Conoce más</button>
  </view>

  <popup
    visible="{{scrollVisible}}"
    animation="{{animation}}"
    onClose="handlePopupClose"
    position="bottom"
  >
    <view class="container-pop-up">
      <view class="container-grip"></view>
      <view class="h1-style font-w-700 claro-blue">Elige el tipo de servicio</view>
      <view class="container-btns">
        <block a:for="{{ linkSolutions }}" a:for-item="link" a:key="*this">
          <arrow-button
            dataInfo={{link}}
            stateImg={{true}}
            imgSrc={{link.icoBtn}}
            iconArrowSrc="/main/ui/assets/icons/navigateNextBlue.svg"
            style="font-weight: bold"
            onTap="onHyperLink"
          >
            {{link.nombre}}
          </arrow-button>
        </block>
      </view>
    </view>

  </popup>

</view>