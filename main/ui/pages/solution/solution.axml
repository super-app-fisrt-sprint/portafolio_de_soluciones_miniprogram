<header-image image="/main/ui/assets/logo-claro-blanco.svg" style="height:{{titleBarHeight + statusBarHeight + 10}}px" />

<view class="container" style="padding-top: {{titleBarHeight + statusBarHeight + 25}}px;">
  <view class="body">
    <view class="title h1-style claro-gray font-w-700">
      Portafolio de soluciones
    </view>

    <view class="body-tab">
      <tabs items="{{dataSolutions}}" current="{{currentData}}" onChange="onChangeTab">

        <swiper
          class="swiper-content"
          current="{{currentData}}"
          autoplay="{{false}}"
          vertical="{{false}}"
          circular="{{false}}"
          onChange="onSwipeChange"
        >
          <swiper-item
            a:for="{{dataSolutions}}"
            a:for-item="solution"
            a:key="*this"
            class="swiper-item"
          >

            <view class="content">
              <block a:if="{{currentData === index}}">

                <block a:if="{{solution.title === 'Cloud'}}">

                  <view class="video-container">
                    <video
                      id="myVideo-{{index}}"
                      src="https://www.miclaroapp.com.co/archivos/cloud.mp4"
                      controls="{{video.showAllControls}}"
                      loop="{{video.isLooping}}"
                      muted="{{video.muteWhenPlaying}}"
                      show-fullscreen-btn="{{video.showFullScreenButton}}"
                      show-play-btn="{{video.showPlayButton}}"
                      show-center-play-btn="{{video.showCenterButton}}"
                      object-fit="{{video.objectFit}}"
                      autoplay="{{video.autoPlay}}"
                      direction="{{video.directionWhenFullScreen}}"
                      initial-time="{{video.initTime}}"
                      mobilenet-hint-type="{{video.mobilenetHintType}}"
                      onPlay="onPlay"
                      onPause="onPause"
                      onEnded="onEnded"
                      onError="onPlayError"
                      onTimeUpdate="onTimeUpdate"
                    />
                  </view>

                  <view class="container-solution">
                    <view class="title-solution claro-blue font-w-700">
                      {{solution.titulo}}
                    </view>
                    <view class="container-scroll claro-gray">
                      {{solution.texto}}
                    </view>
                  </view>

                </block>

                <block a:if="{{solution.title === 'Móvil'}}">

                  <view class="video-container">
                    <video
                      id="myVideo-{{index}}"
                      src="https://www.miclaroapp.com.co/archivos/movil.mp4"
                      controls="{{video.showAllControls}}"
                      loop="{{video.isLooping}}"
                      muted="{{video.muteWhenPlaying}}"
                      show-fullscreen-btn="{{video.showFullScreenButton}}"
                      show-play-btn="{{video.showPlayButton}}"
