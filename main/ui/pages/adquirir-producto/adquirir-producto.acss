* {
  box-sizing: border-box;
}

.container {
  height: 100vh;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  padding: 30rpx;
}

.container-btns {
  height: 20%;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  justify-content: center;
  gap: 25rpx;
}

.container-web-view {
  flex-flow: 1;
  cursor: pointer;
}

.container-web-view:hover {
  transform: translateY(-5px);
}

.container-web-view:active {
  transform: scale(0.95);
}

/* Estilos */

.style-text {
  color: #9d9d9d;
}

.size-text {
  font-weight: bold;
  font-size: 32rpx;
}